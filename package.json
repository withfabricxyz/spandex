{
  "private": true,
  "description": "spanDEX - Open Source DEX Meta-Aggregator Library for Token Swaps",
  "workspaces": [
    "packages/core",
    "packages/react",
    "site",
    "examples/hono",
    "examples/react"
  ],
  "scripts": {
    "lint": "biome check --formatter-enabled=true --linter-enabled=true",
    "lint:fix": "biome check --formatter-enabled=true --linter-enabled=true --write --unsafe ./",
    "build": "bun ./scripts/build-packages.ts",
    "pack": "cd packages/core && bun pm pack && cd ../wagmi && bun pm pack",
    "example:react:install": "cd examples/react && bun i",
    "example:react:dev": "cd examples/react && bun run dev",
    "example:react:build": "cd examples/react && bun run build",
    "example:react:preview": "cd examples/react && bun run preview",
    "ci:version": "changeset version && bun update",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bunx npm publish || true); done && changeset tag"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@biomejs/biome": "2.3.15",
    "typescript": "^5.9.3",
    "@types/node": "^25.3.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.8"
  }
}
