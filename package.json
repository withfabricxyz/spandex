{
  "private": true,
  "description": "SMAL Meta Aggregator Library - Get the best swap rates across multiple DEXs and aggregators",
  "workspaces": [
    "packages/core",
    "packages/simulate",
    "packages/wagmi",
    "site"
  ],
  "scripts": {
    "lint": "biome check --formatter-enabled=true --linter-enabled=true",
    "lint:fix": "biome check --formatter-enabled=true --linter-enabled=true --write --unsafe ./",
    "build": "bun ./scripts/build-packages.ts",
    "pack": "cd packages/core && bun pm pack && cd ../simulate && bun pm pack && cd ../wagmi && bun pm pack"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@biomejs/biome": "2.3.5",
    "typescript": "^5.9.3",
    "@types/node": "^24.10.1"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.7"
  }
}
