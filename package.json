{
  "private": true,
  "description": "SpanDEX - Open Source DEX Meta-Aggregator Library for Best Swap Prices",
  "workspaces": [
    "packages/core",
    "packages/react",
    "site"
  ],
  "scripts": {
    "lint": "biome check --formatter-enabled=true --linter-enabled=true",
    "lint:fix": "biome check --formatter-enabled=true --linter-enabled=true --write --unsafe ./",
    "build": "bun ./scripts/build-packages.ts",
    "pack": "cd packages/core && bun pm pack && cd ../react && bun pm pack"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@biomejs/biome": "2.3.5",
    "typescript": "^5.9.3",
    "@types/node": "^25.0.3"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.8"
  }
}
